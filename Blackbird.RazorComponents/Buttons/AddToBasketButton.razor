@using Blackbird.Application.Dtos
@inject Blackbird.RazorComponents.States.BasketState BasketState

@if (UseIconButton)
{
    <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Primary" OnClick="@AddToBasket" />
}
else
{
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@AddToBasket" Class="mr-1 ml-1">Add</MudButton>
}

@code {
    [Parameter] public ProductDto Product { get; set; }

    [Parameter] public bool UseIconButton { get; set; }

    private void AddToBasket()
    {
        BasketState.AddToBasket(Product);
    }
}