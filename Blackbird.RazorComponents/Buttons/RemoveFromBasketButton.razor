@using Blackbird.Application.Dtos
@inject Blackbird.RazorComponents.States.BasketState BasketState

@if (UseIconButton)
{
    <MudIconButton Icon="@Icons.Material.Outlined.Remove" Color="Color.Primary" OnClick="@RemoveItemFromBasket" />
}
else
{
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@RemoveItemFromBasket" Class="mr-1 ml-1">Remove</MudButton>
}

@code {
    [Parameter] public ProductDto Product { get; set; }

    [Parameter] public bool UseIconButton { get; set; }

    private void RemoveItemFromBasket()
    {
        BasketState.RemoveItemFromBasket(Product);
    }
}