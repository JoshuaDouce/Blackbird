@using Blackbird.Application.Dtos;
@using MudBlazor
@using Blackbird.RazorComponents.Buttons
@inject Blackbird.RazorComponents.Interfaces.States.IBasketState BasketState

<MudCardContent>
    <MudText Typo="Typo.h6">@Product.Name</MudText>
    <MudText Typo="Typo.body1">Quantity: @Product.Quantity</MudText>
    <MudText Typo="Typo.body1">Price: @Product.Price.ToString("C")</MudText>
    <MudText Typo="Typo.body1">Total: @((Product.Quantity * Product.Price).ToString("C"))</MudText>
        <MudGrid>
            <MudItem>
                <AddToBasketButton Product="@Product" UseIconButton="true"/>
            </MudItem>
            <MudItem>
                <RemoveFromBasketButton Product="@Product" UseIconButton="true"/>
            </MudItem>
            <MudItem>
                <ClearFromBasketButton Product="@Product" />
            </MudItem>
        </MudGrid>
</MudCardContent>

@code{
    [Parameter] public ProductDto Product { get; set; }
}